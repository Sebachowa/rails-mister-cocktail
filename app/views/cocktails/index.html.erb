<div class="banner">
      <div class="banner-content">
        <h1>Cocktail World</h1>
        <p>Find the perfect cocktail</p>
        <a href="#content" class="btn btn-primary btn-lg">GO!</a>
      </div>
    </div>
<div class="container" id="content">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 space">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('http://lorempixel.com/400/200/nightlife');">
          <div class="card-description">
            <h2><%=cocktail.name.capitalize%></h2>
            <p> Write something </p>
          </div>
          <%= link_to "link", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

